# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Anthropic API
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# GitHub App Configuration
# Create a GitHub App at: https://github.com/settings/apps/new
GITHUB_APP_ID=your_app_id
GITHUB_APP_PRIVATE_KEY=your_private_key_here
GITHUB_WEBHOOK_SECRET=your_webhook_secret

# Optional: GitHub Personal Access Token (for development)
GITHUB_TOKEN=ghp_your_token_here

# Application Settings
LOG_LEVEL=INFO
MAX_REPO_SIZE_MB=500
MAX_DIFF_LOC=1000
WORKER_CONCURRENCY=2

# Policy Settings
AUTO_COMMIT_ENABLED=false
AUTO_COMMIT_RISK_THRESHOLD=0.25
MAX_PATCH_LOC=30
MAX_FILES_PER_PATCH=3

# Denylist paths (comma-separated)
DENYLIST_PATHS=auth/**,secrets/**,config/prod/**

# Verification
ENABLE_VERIFICATION=true
VERIFICATION_TIMEOUT_SECONDS=300